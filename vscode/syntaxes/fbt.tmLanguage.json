{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "FairBench Tiny",
  "scopeName": "source.fbt",
  "patterns": [
    {
      "name": "comment.line.number-sign.fbt",
      "match": "#.*$"
    },
    {
      "name": "constant.numeric.fbt",
      "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
    },
    {
      "name": "variable.parameter.fbt",
      "match": "@[A-Za-z0-9_]+"
    },
    {
      "name": "keyword.other.option.fbt",
      "match": "--[A-Za-z0-9_-]+"
    },
    {
      "name": "string.unquoted.path.fbt",
      "match": "^[A-Za-z0-9_./-]+\\.(csv|txt|tsv)"
    }
  ],
  "repository": {},
  "scopeName": "source.fbt"
}
